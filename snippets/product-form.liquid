<!-- Product Form Component - Luxury Women's Clothing -->
<div class="product-form" data-product-form>
  <form action="/cart/add" method="post" id="product-form-{{ section.id }}" class="product-form__form">
    <!-- Variant ID (Hidden) -->
    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" data-product-id>
    
    <!-- Product Options (Generated by Variant Picker) -->
    <div class="form-options" data-form-options>
      <!-- Options will be populated by variant picker -->
    </div>

    <!-- Add to Cart Button -->
    <div class="form-actions">
      <button type="submit" 
              name="add" 
              class="add-to-cart-btn"
              data-add-to-cart
              {% unless product.available %}disabled{% endunless %}>
        <span class="btn-text" data-btn-text>
          {% if product.available %}
            Add to Cart
          {% else %}
            Sold Out
          {% endif %}
        </span>
        
        <span class="btn-price" data-btn-price>
          {{ product.price | money }}
        </span>
        
        <span class="btn-loading" data-btn-loading>
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M10 1V4M10 16V19M15.95 4.05L13.78 6.22M6.22 13.78L4.05 15.95M19 10H16M4 10H1M15.95 15.95L13.78 13.78M6.22 6.22L4.05 4.05" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          Adding...
        </span>
      </button>

      <!-- Alternative Actions -->
      <div class="alternative-actions">
        <!-- Wishlist Button -->
        <button type="button" class="wishlist-btn" data-wishlist-btn>
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M10 17.5L3.5 11C2.5 10 2 8.5 2 7C2 4 4 2 7 2C8.5 2 10 2.5 11 3.5L10 4.5L9 3.5C10 2.5 11.5 2 13 2C16 2 18 4 18 7C18 8.5 17.5 10 16.5 11L10 17.5Z" 
                  stroke="currentColor" 
                  stroke-width="2" 
                  fill="none"/>
          </svg>
          Add to Wishlist
        </button>

        <!-- Share Button -->
        <button type="button" class="share-btn" data-share-btn>
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M15 7C16.5 7 17.5 6 17.5 4.5C17.5 3 16.5 2 15 2C13.5 2 12.5 3 12.5 4.5C12.5 6 13.5 7 15 7ZM5 12C6.5 12 7.5 11 7.5 9.5C7.5 8 6.5 7 5 7C3.5 7 2.5 8 2.5 9.5C2.5 11 3.5 12 5 12ZM15 18C16.5 18 17.5 17 17.5 15.5C17.5 14 16.5 13 15 13C13.5 13 12.5 14 12.5 15.5C12.5 17 13.5 18 15 18ZM7.5 4.5L12.5 7.5M12.5 12.5L7.5 15.5" 
                  stroke="currentColor" 
                  stroke-width="2" 
                  stroke-linecap="round" 
                  stroke-linejoin="round"/>
          </svg>
          Share
        </button>
      </div>
    </div>

    <!-- Payment Terms -->
    <div class="payment-terms">
      <div class="terms-item">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M8 12V8M8 4H8.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
        <span>Free shipping on orders over $200</span>
      </div>
      
      <div class="terms-item">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M13.333 4L6 11.333L2.667 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span>30-day easy returns</span>
      </div>
      
      <div class="terms-item">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M8 14.667C11.6819 14.667 14.667 11.6819 14.667 8C14.667 4.3181 11.6819 1.333 8 1.333C4.3181 1.333 1.333 4.3181 1.333 8C1.333 11.6819 4.3181 14.667 8 14.667Z" stroke="currentColor" stroke-width="2"/>
          <path d="M8 5.333V8L10 9.333" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span>Secure checkout</span>
      </div>
    </div>
  </form>

  <!-- Success Message -->
  <div class="form-success" data-form-success>
    <div class="success-content">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <div class="success-text">
        <h4 class="success-title">Added to Cart!</h4>
        <p class="success-message">Item has been added to your shopping cart.</p>
      </div>
      <button class="success-action" data-success-action>
        View Cart
      </button>
    </div>
  </div>

  <!-- Error Message -->
  <div class="form-error" data-form-error>
    <div class="error-content">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M12 8V12M12 16H12.01M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <div class="error-text">
        <h4 class="error-title" data-error-title>Error</h4>
        <p class="error-message" data-error-message>Please try again.</p>
      </div>
      <button class="error-action" data-error-action>
        Try Again
      </button>
    </div>
  </div>

  <!-- Share Modal -->
  <div class="share-modal" data-share-modal>
    <div class="modal-content">
      <button class="modal-close" data-share-close>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M19 6.41L17.59 5L12 10.59L6.41 5L5 6.41L10.59 12L5 17.59L6.41 19L12 13.41L17.59 19L19 17.59L13.41 12L19 6.41Z" fill="currentColor"/>
        </svg>
      </button>
      
      <h3 class="modal-title">Share this product</h3>
      
      <div class="share-options">
        <button class="share-option" data-share-facebook>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M18 2H15C13.6739 2 12.4021 2.52678 11.4645 3.46447C10.5268 4.40215 10 5.67392 10 7V10H7V14H10V22H14V14H17L18 10H14V7C14 6.73478 14.1054 6.48043 14.2929 6.29289C14.4804 6.10536 14.7348 6 15 6H18V2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Facebook
        </button>
        
        <button class="share-option" data-share-twitter>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M23 3C22.0424 3.67548 20.9821 4.19211 19.86 4.53C19.2577 3.83751 18.4573 3.34669 17.567 3.12393C16.6767 2.90116 15.7395 2.9572 14.8821 3.28445C14.0247 3.61171 13.2884 4.1944 12.773 4.95372C12.2575 5.71303 11.9877 6.61234 12 7.53V8.53C10.2426 8.57557 8.50127 8.18581 6.93101 7.39545C5.36074 6.60508 4.01032 5.43864 3 4C3 4 -1 13 8 17C5.94053 18.398 3.48716 19.0989 1 19C10 24 21 19 21 7.5C20.9991 7.22145 20.9723 6.94359 20.92 6.67C21.9406 5.66349 22.6608 4.39271 23 3V3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Twitter
        </button>
        
        <button class="share-option" data-share-pinterest>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M12 17C12 17 9.5 14.5 9.5 12C9.5 9.5 11 8 12.5 8C14 8 15 9 15 10.5C15 12 14 13 13 13C12.5 13 12 12.5 12 12C12 11.5 12.5 10.5 13.5 10.5C14.5 10.5 15.5 11.5 15.5 13C15.5 15.5 13 17 11 17C9 17 7 15 7 12C7 9 9 7 12 7C15 7 17 9 17 12C17 15 15 17 12 17Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Pinterest
        </button>
        
        <button class="share-option" data-share-link>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M10 13C10.4295 13.5741 10.9774 14.0491 11.6066 14.3929C12.2357 14.7367 12.9315 14.9411 13.6467 14.9923C14.3618 15.0435 15.0796 14.9403 15.7513 14.6897C16.4231 14.4392 17.0331 14.047 17.54 13.54L20.54 10.54C21.4508 9.59695 21.9548 8.33397 21.9434 7.02296C21.932 5.71196 21.4061 4.45791 20.4791 3.53087C19.5521 2.60383 18.298 2.07799 16.987 2.0666C15.676 2.0552 14.413 2.55918 13.47 3.47L11.75 5.18M14 11C13.5705 10.4259 13.0226 9.95085 12.3934 9.60705C11.7643 9.26325 11.0685 9.05886 10.3533 9.00766C9.63816 8.95646 8.92037 9.05966 8.24861 9.3102C7.57685 9.56074 6.96684 9.95296 6.46 10.46L3.46 13.46C2.54919 14.403 2.04521 15.666 2.05661 16.977C2.068 18.288 2.59384 19.5421 3.52087 20.4691C4.44791 21.3962 5.70196 21.922 7.01296 21.9334C8.32397 21.9448 9.58695 21.4408 10.53 20.53L12.24 18.82" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Copy Link
        </button>
      </div>
    </div>
  </div>
</div>