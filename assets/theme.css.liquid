/* Luxury Shopify Theme - Premium Styling System */

/* CSS Variables - Luxury Color Palette */
:root {
  /* Primary Colors */
  --color-navy: #0A2540;
  --color-cream: #F8F5F0;
  --color-gold: #D4AF37;
  --color-burgundy: #8B2635;
  
  /* Semantic Colors */
  --color-primary: var(--color-navy);
  --color-secondary: var(--color-cream);
  --color-accent: var(--color-gold);
  --color-support: var(--color-burgundy);
  
  /* Neutral Colors */
  --color-white: #FFFFFF;
  --color-black: #000000;
  --color-gray-100: #F7FAFC;
  --color-gray-200: #EDF2F7;
  --color-gray-300: #E2E8F0;
  --color-gray-400: #CBD5E0;
  --color-gray-500: #A0AEC0;
  --color-gray-600: #718096;
  --color-gray-700: #4A5568;
  --color-gray-800: #2D3748;
  --color-gray-900: #1A202C;
  
  /* Spacing System */
  --space-1: 0.25rem;  /* 4px */
  --space-2: 0.5rem;   /* 8px */
  --space-3: 0.75rem;  /* 12px */
  --space-4: 1rem;     /* 16px */
  --space-5: 1.25rem;  /* 20px */
  --space-6: 1.5rem;   /* 24px */
  --space-8: 2rem;     /* 32px */
  --space-10: 2.5rem;  /* 40px */
  --space-12: 3rem;    /* 48px */
  --space-16: 4rem;    /* 64px */
  --space-20: 5rem;    /* 80px */
  --space-24: 6rem;    /* 96px */
  
  /* Border Radius */
  --radius-sm: 0.125rem;  /* 2px */
  --radius-base: 0.25rem; /* 4px */
  --radius-md: 0.375rem;  /* 6px */
  --radius-lg: 0.5rem;    /* 8px */
  --radius-xl: 0.75rem;   /* 12px */
  --radius-2xl: 1rem;     /* 16px */
  --radius-full: 9999px;
  
  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-base: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  
  /* Transitions */
  --transition-base: all 0.3s ease-in-out;
  --transition-fast: all 0.15s ease-in-out;
  --transition-slow: all 0.5s ease-in-out;
}

/* Reset & Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  background-color: var(--color-cream);
  color: var(--color-navy);
  line-height: var(--leading-normal);
  overflow-x: hidden;
}

/* Header Styles */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: var(--color-white);
  box-shadow: var(--shadow-sm);
  transition: var(--transition-base);
}

.header__desktop {
  display: none;
  
  @media (min-width: 768px) {
    display: block;
  }
}

.header__mobile {
  display: block;
  
  @media (min-width: 768px) {
    display: none;
  }
}

.header__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: var(--space-4) var(--space-6);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header__logo-link {
  text-decoration: none;
  color: var(--color-navy);
  font-family: var(--font-primary);
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
}

.header__nav-list {
  display: flex;
  list-style: none;
  gap: var(--space-8);
}

.header__nav-link {
  text-decoration: none;
  color: var(--color-navy);
  font-weight: var(--font-medium);
  transition: var(--transition-base);
  position: relative;
  
  &:hover {
    color: var(--color-gold);
  }
  
  &::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-gold);
    transition: var(--transition-base);
  }
  
  &:hover::after {
    width: 100%;
  }
}

.header__actions {
  display: flex;
  align-items: center;
  gap: var(--space-4);
}

.header__action-btn {
  background: none;
  border: none;
  color: var(--color-navy);
  cursor: pointer;
  padding: var(--space-2);
  border-radius: var(--radius-base);
  transition: var(--transition-base);
  position: relative;
  
  &:hover {
    color: var(--color-gold);
    background-color: var(--color-gray-100);
  }
}

.header__cart-count {
  position: absolute;
  top: -4px;
  right: -4px;
  background-color: var(--color-burgundy);
  color: var(--color-white);
  font-size: var(--text-xs);
  padding: 2px 6px;
  border-radius: var(--radius-full);
  min-width: 18px;
  text-align: center;
}

/* Mobile Header */
.header__mobile-container {
  padding: var(--space-3) var(--space-4);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header__mobile-toggle {
  background: none;
  border: none;
  cursor: pointer;
  width: 24px;
  height: 24px;
  position: relative;
  
  span {
    display: block;
    height: 2px;
    width: 100%;
    background-color: var(--color-navy);
    margin: 4px 0;
    transition: var(--transition-base);
  }
}

/* Mobile Menu */
.mobile-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(10, 37, 64, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: var(--transition-base);
  
  &.active {
    opacity: 1;
    visibility: visible;
  }
}

.mobile-menu {
  position: fixed;
  top: 0;
  left: -100%;
  width: 300px;
  height: 100vh;
  background-color: var(--color-white);
  z-index: 1000;
  transition: var(--transition-base);
  box-shadow: var(--shadow-lg);
  
  &.active {
    left: 0;
  }
}

.mobile-menu__content {
  padding: var(--space-6);
  height: 100%;
}

.mobile-menu__close {
  background: none;
  border: none;
  color: var(--color-navy);
  cursor: pointer;
  margin-bottom: var(--space-8);
}

.mobile-menu__list {
  list-style: none;
}

.mobile-menu__item {
  margin-bottom: var(--space-4);
}

.mobile-menu__link {
  text-decoration: none;
  color: var(--color-navy);
  font-size: var(--text-lg);
  font-weight: var(--font-medium);
  transition: var(--transition-base);
  
  &:hover {
    color: var(--color-gold);
  }
}

/* Footer Styles */
.footer {
  background-color: var(--color-navy);
  color: var(--color-cream);
  padding: var(--space-12) 0 var(--space-8);
}

.footer__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--space-6);
}

.footer__columns {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-8);
  margin-bottom: var(--space-12);
  
  @media (min-width: 768px) {
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
  }
}

.footer__logo-text {
  font-family: var(--font-primary);
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  color: var(--color-cream);
}

.footer__description {
  margin: var(--space-4) 0;
  line-height: var(--leading-relaxed);
  color: var(--color-gray-300);
}

.footer__social-list {
  display: flex;
  gap: var(--space-4);
  list-style: none;
}

.footer__social-link {
  color: var(--color-cream);
  padding: var(--space-2);
  border-radius: var(--radius-base);
  transition: var(--transition-base);
  
  &:hover {
    color: var(--color-gold);
    background-color: rgba(212, 175, 55, 0.1);
  }
}

.footer__column-title {
  font-family: var(--font-primary);
  font-size: var(--text-xl);
  margin-bottom: var(--space-4);
  color: var(--color-cream);
}

.footer__link-list {
  list-style: none;
}

.footer__link-item {
  margin-bottom: var(--space-3);
}

.footer__link {
  text-decoration: none;
  color: var(--color-gray-300);
  transition: var(--transition-base);
  
  &:hover {
    color: var(--color-gold);
  }
}

.footer__bottom {
  border-top: 1px solid var(--color-gray-700);
  padding-top: var(--space-6);
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  align-items: center;
  
  @media (min-width: 768px) {
    flex-direction: row;
    justify-content: space-between;
  }
}

.footer__copyright {
  color: var(--color-gray-400);
  font-size: var(--text-sm);
}

/* Homepage Styles */
.homepage {
  margin-top: 80px; /* Account for fixed header */
}

.hero {
  background: linear-gradient(135deg, var(--color-navy) 0%, var(--color-burgundy) 100%);
  color: var(--color-cream);
  padding: var(--space-20) var(--space-6);
}

.hero__container {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-8);
  align-items: center;
  
  @media (min-width: 768px) {
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
  }
}

.hero__title {
  font-size: var(--text-4xl);
  font-weight: var(--font-bold);
  margin-bottom: var(--space-4);
  color: var(--color-cream);
  
  @media (min-width: 768px) {
    font-size: var(--text-5xl);
  }
}

.hero__description {
  font-size: var(--text-lg);
  margin-bottom: var(--space-6);
  line-height: var(--leading-relaxed);
  color: var(--color-gray-200);
}

.hero__actions {
  display: flex;
  gap: var(--space-4);
  flex-wrap: wrap;
}

.hero__btn {
  padding: var(--space-3) var(--space-6);
  border-radius: var(--radius-lg);
  text-decoration: none;
  font-weight: var(--font-medium);
  transition: var(--transition-base);
  border: 2px solid transparent;
}

.hero__btn--primary {
  background-color: var(--color-gold);
  color: var(--color-navy);
  
  &:hover {
    background-color: transparent;
    border-color: var(--color-gold);
    color: var(--color-gold);
  }
}

.hero__btn--secondary {
  background-color: transparent;
  color: var(--color-cream);
  border-color: var(--color-cream);
  
  &:hover {
    background-color: var(--color-cream);
    color: var(--color-navy);
  }
}

.hero__image-element {
  width: 100%;
  height: auto;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-xl);
}

/* Featured Collections */
.featured-collections {
  padding: var(--space-16) var(--space-6);
  background-color: var(--color-white);
}

.featured-collections__container {
  max-width: 1200px;
  margin: 0 auto;
}

.featured-collections__title {
  text-align: center;
  margin-bottom: var(--space-8);
  color: var(--color-navy);
}

.featured-collections__grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-6);
  
  @media (min-width: 768px) {
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-8);
  }
}

.featured-collection {
  background-color: var(--color-cream);
  border-radius: var(--radius-xl);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  transition: var(--transition-base);
  
  &:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
}

.featured-collection__link {
  text-decoration: none;
  color: inherit;
  display: block;
}

.featured-collection__image {
  width: 100%;
  height: 250px;
  object-fit: cover;
}

.featured-collection__placeholder {
  width: 100%;
  height: 250px;
  background-color: var(--color-gray-200);
  display: flex;
  align-items: center;
  justify-content: center;
}

.featured-collection__content {
  padding: var(--space-6);
}

.featured-collection__name {
  font-size: var(--text-xl);
  margin-bottom: var(--space-2);
  color: var(--color-navy);
}

.featured-collection__product-count {
  color: var(--color-gray-600);
  font-size: var(--text-sm);
}

/* About Preview */
.about-preview {
  padding: var(--space-16) var(--space-6);
  background-color: var(--color-navy);
  color: var(--color-cream);
}

.about-preview__container {
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
}

.about-preview__title {
  margin-bottom: var(--space-4);
  color: var(--color-cream);
}

.about-preview__description {
  font-size: var(--text-lg);
  line-height: var(--leading-relaxed);
  margin-bottom: var(--space-6);
  color: var(--color-gray-200);
}

.about-preview__btn {
  display: inline-block;
  padding: var(--space-3) var(--space-6);
  background-color: var(--color-gold);
  color: var(--color-navy);
  text-decoration: none;
  border-radius: var(--radius-lg);
  font-weight: var(--font-medium);
  transition: var(--transition-base);
  
  &:hover {
    background-color: transparent;
    border: 2px solid var(--color-gold);
    color: var(--color-gold);
  }
}

/* Utility Classes */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.flex { display: flex; }
.flex-col { flex-direction: column; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }

.grid { display: grid; }
.grid-cols-1 { grid-template-columns: 1fr; }
.grid-cols-2 { grid-template-columns: repeat(2, 1fr); }
.grid-cols-3 { grid-template-columns: repeat(3, 1fr); }

.w-full { width: 100%; }
.h-full { height: 100%; }

.p-4 { padding: var(--space-4); }
.p-6 { padding: var(--space-6); }
.p-8 { padding: var(--space-8); }

.m-4 { margin: var(--space-4); }
.m-6 { margin: var(--space-6); }
.m-8 { margin: var(--space-8); }

/* Responsive Design */
@media (max-width: 767px) {
  .header__container {
    padding: var(--space-3) var(--space-4);
  }
  
  .hero {
    padding: var(--space-12) var(--space-4);
  }
  
  .hero__title {
    font-size: var(--text-3xl);
  }
  
  .featured-collections,
  .about-preview {
    padding: var(--space-8) var(--space-4);
  }
}