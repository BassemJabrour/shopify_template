/* Luxury Shopify Theme - Premium Styling System */

/* CSS Variables - Luxury Color Palette */
:root {
  /* Primary Colors */
  --color-navy: #0A2540;
  --color-cream: #F8F5F0;
  --color-gold: #D4AF37;
  --color-burgundy: #8B2635;
  
  /* Semantic Colors */
  --color-primary: var(--color-navy);
  --color-secondary: var(--color-cream);
  --color-accent: var(--color-gold);
  --color-support: var(--color-burgundy);
  
  /* Neutral Colors */
  --color-white: #FFFFFF;
  --color-black: #000000;
  --color-gray-100: #F7FAFC;
  --color-gray-200: #EDF2F7;
  --color-gray-300: #E2E8F0;
  --color-gray-400: #CBD5E0;
  --color-gray-500: #A0AEC0;
  --color-gray-600: #718096;
  --color-gray-700: #4A5568;
  --color-gray-800: #2D3748;
  --color-gray-900: #1A202C;
  
  /* Spacing System */
  --space-1: 0.25rem;  /* 4px */
  --space-2: 0.5rem;   /* 8px */
  --space-3: 0.75rem;  /* 12px */
  --space-4: 1rem;     /* 16px */
  --space-5: 1.25rem;  /* 20px */
  --space-6: 1.5rem;   /* 24px */
  --space-8: 2rem;     /* 32px */
  --space-10: 2.5rem;  /* 40px */
  --space-12: 3rem;    /* 48px */
  --space-16: 4rem;    /* 64px */
  --space-20: 5rem;    /* 80px */
  --space-24: 6rem;    /* 96px */
  
  /* Border Radius */
  --radius-sm: 0.125rem;  /* 2px */
  --radius-base: 0.25rem; /* 4px */
  --radius-md: 0.375rem;  /* 6px */
  --radius-lg: 0.5rem;    /* 8px */
  --radius-xl: 0.75rem;   /* 12px */
  --radius-2xl: 1rem;     /* 16px */
  --radius-full: 9999px;
  
  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-base: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  
  /* Transitions */
  --transition-base: all 0.3s ease-in-out;
  --transition-fast: all 0.15s ease-in-out;
  --transition-slow: all 0.5s ease-in-out;
}

/* Reset & Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  background-color: var(--color-cream);
  color: var(--color-navy);
  line-height: var(--leading-normal);
  overflow-x: hidden;
}

/* Header Styles */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: var(--color-white);
  box-shadow: var(--shadow-sm);
  transition: var(--transition-base);
}

.header__desktop {
  display: none;
  
  @media (min-width: 768px) {
    display: block;
  }
}

.header__mobile {
  display: block;
  
  @media (min-width: 768px) {
    display: none;
  }
}

.header__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: var(--space-4) var(--space-6);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header__logo-link {
  text-decoration: none;
  color: var(--color-navy);
  font-family: var(--font-primary);
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
}

.header__nav-list {
  display: flex;
  list-style: none;
  gap: var(--space-8);
}

.header__nav-link {
  text-decoration: none;
  color: var(--color-navy);
  font-weight: var(--font-medium);
  transition: var(--transition-base);
  position: relative;
  
  &:hover {
    color: var(--color-gold);
  }
  
  &::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-gold);
    transition: var(--transition-base);
  }
  
  &:hover::after {
    width: 100%;
  }
}

.header__actions {
  display: flex;
  align-items: center;
  gap: var(--space-4);
}

.header__action-btn {
  background: none;
  border: none;
  color: var(--color-navy);
  cursor: pointer;
  padding: var(--space-2);
  border-radius: var(--radius-base);
  transition: var(--transition-base);
  position: relative;
  
  &:hover {
    color: var(--color-gold);
    background-color: var(--color-gray-100);
  }
}

.header__cart-count {
  position: absolute;
  top: -4px;
  right: -4px;
  background-color: var(--color-burgundy);
  color: var(--color-white);
  font-size: var(--text-xs);
  padding: 2px 6px;
  border-radius: var(--radius-full);
  min-width: 18px;
  text-align: center;
}

/* Mobile Header */
.header__mobile-container {
  padding: var(--space-3) var(--space-4);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header__mobile-toggle {
  background: none;
  border: none;
  cursor: pointer;
  width: 24px;
  height: 24px;
  position: relative;
  
  span {
    display: block;
    height: 2px;
    width: 100%;
    background-color: var(--color-navy);
    margin: 4px 0;
    transition: var(--transition-base);
  }
}

/* Mobile Menu */
.mobile-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(10, 37, 64, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: var(--transition-base);
  
  &.active {
    opacity: 1;
    visibility: visible;
  }
}

.mobile-menu {
  position: fixed;
  top: 0;
  left: -100%;
  width: 300px;
  height: 100vh;
  background-color: var(--color-white);
  z-index: 1000;
  transition: var(--transition-base);
  box-shadow: var(--shadow-lg);
  
  &.active {
    left: 0;
  }
}

.mobile-menu__content {
  padding: var(--space-6);
  height: 100%;
}

.mobile-menu__close {
  background: none;
  border: none;
  color: var(--color-navy);
  cursor: pointer;
  margin-bottom: var(--space-8);
}

.mobile-menu__list {
  list-style: none;
}

.mobile-menu__item {
  margin-bottom: var(--space-4);
}

.mobile-menu__link {
  text-decoration: none;
  color: var(--color-navy);
  font-size: var(--text-lg);
  font-weight: var(--font-medium);
  transition: var(--transition-base);
  
  &:hover {
    color: var(--color-gold);
  }
}

/* Footer Styles */
.footer {
  background-color: var(--color-navy);
  color: var(--color-cream);
  padding: var(--space-12) 0 var(--space-8);
}

.footer__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--space-6);
}

.footer__columns {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-8);
  margin-bottom: var(--space-12);
  
  @media (min-width: 768px) {
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
  }
}

.footer__logo-text {
  font-family: var(--font-primary);
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  color: var(--color-cream);
}

.footer__description {
  margin: var(--space-4) 0;
  line-height: var(--leading-relaxed);
  color: var(--color-gray-300);
}

.footer__social-list {
  display: flex;
  gap: var(--space-4);
  list-style: none;
}

.footer__social-link {
  color: var(--color-cream);
  padding: var(--space-2);
  border-radius: var(--radius-base);
  transition: var(--transition-base);
  
  &:hover {
    color: var(--color-gold);
    background-color: rgba(212, 175, 55, 0.1);
  }
}

.footer__column-title {
  font-family: var(--font-primary);
  font-size: var(--text-xl);
  margin-bottom: var(--space-4);
  color: var(--color-cream);
}

.footer__link-list {
  list-style: none;
}

.footer__link-item {
  margin-bottom: var(--space-3);
}

.footer__link {
  text-decoration: none;
  color: var(--color-gray-300);
  transition: var(--transition-base);
  
  &:hover {
    color: var(--color-gold);
  }
}

.footer__bottom {
  border-top: 1px solid var(--color-gray-700);
  padding-top: var(--space-6);
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  align-items: center;
  
  @media (min-width: 768px) {
    flex-direction: row;
    justify-content: space-between;
  }
}

.footer__copyright {
  color: var(--color-gray-400);
  font-size: var(--text-sm);
}

/* Collection Page Styles - Luxury Women's Clothing */
.collection-page {
  margin-top: 80px; /* Account for fixed header */
  padding: var(--space-8) var(--space-6);
}

.collection-header {
  text-align: center;
  margin-bottom: var(--space-12);
}

.collection-header__container {

/* ==========================================================================
   PRODUCT PAGE STYLES - Luxury Women's Clothing
   ========================================================================== */

.product-page {
  margin-top: 80px; /* Account for fixed header */
  padding: var(--space-8) var(--space-6);
  max-width: 1400px;
  margin-left: auto;
  margin-right: auto;
}

/* Breadcrumb Navigation */
.product-breadcrumb {
  margin-bottom: var(--space-8);
}

.breadcrumb-list {
  display: flex;
  list-style: none;
  gap: var(--space-2);
  align-items: center;
}

.breadcrumb-item {
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.breadcrumb-link {
  text-decoration: none;
  color: var(--color-gray-600);
  font-size: var(--text-sm);
  transition: var(--transition-base);
}

.breadcrumb-link:hover {
  color: var(--color-gold);
}

.breadcrumb-item--current .breadcrumb-text {
  color: var(--color-navy);
  font-weight: var(--font-medium);
}

.breadcrumb-item:not(:last-child)::after {
  content: '/';
  color: var(--color-gray-400);
}

/* Product Layout */
.product-layout {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-12);
  margin-bottom: var(--space-16);
}

@media (min-width: 768px) {
  .product-layout {
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
  }
}

@media (min-width: 1024px) {
  .product-layout {
    grid-template-columns: 60% 40%;
    gap: var(--space-20);
  }
}

/* Product Gallery */
.product-gallery {
  position: relative;
}

.gallery-main {
  position: relative;
  margin-bottom: var(--space-6);
}

.main-image-container {
  position: relative;
  overflow: hidden;
  border-radius: var(--radius-lg);
  background-color: var(--color-gray-100);
}

.main-image {
  width: 100%;
  height: auto;
  display: block;
  transition: var(--transition-base);
  cursor: zoom-in;
}

.main-image:hover {
  transform: scale(1.02);
}

.main-image-placeholder {
  width: 100%;
  height: 500px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-gray-200);
}

/* Zoom Controls */
.zoom-controls {
  position: absolute;
  top: var(--space-4);
  right: var(--space-4);
  display: flex;
  gap: var(--space-2);
  z-index: 10;
}

.zoom-btn {
  background: var(--color-white);
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-base);
  padding: var(--space-2);
  cursor: pointer;
  transition: var(--transition-base);
  display: flex;
  align-items: center;
  justify-content: center;
}

.zoom-btn:hover {
  background: var(--color-gray-100);
  border-color: var(--color-gray-400);
}

/* Navigation Arrows */
.nav-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: var(--color-white);
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-full);
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: var(--transition-base);
  z-index: 10;
}

.nav-arrow:hover {
  background: var(--color-gray-100);
  border-color: var(--color-gray-400);
}

.nav-arrow--prev {
  left: var(--space-4);
}

.nav-arrow--next {
  right: var(--space-4);
}

/* Image Counter */
.image-counter {
  text-align: center;
  color: var(--color-gray-600);
  font-size: var(--text-sm);
}

/* Thumbnail Gallery */
.gallery-thumbnails {
  position: relative;
}

.thumbnails-container {
  display: flex;
  gap: var(--space-3);
  overflow-x: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.thumbnails-container::-webkit-scrollbar {
  display: none;
}

.thumbnail-btn {
  background: none;
  border: 2px solid transparent;
  border-radius: var(--radius-base);
  padding: var(--space-1);
  cursor: pointer;
  transition: var(--transition-base);
  flex-shrink: 0;
}

.thumbnail-btn:hover {
  border-color: var(--color-gray-300);
}

.thumbnail-btn--active {
  border-color: var(--color-gold);
}

.thumbnail-image {
  width: 80px;
  height: 100px;
  object-fit: cover;
  border-radius: var(--radius-sm);
}

.thumbnail-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: var(--color-white);
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-full);
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: var(--transition-base);
  z-index: 5;
}

.thumbnail-nav:hover {
  background: var(--color-gray-100);
}

.thumbnail-nav--prev {
  left: -16px;
}

.thumbnail-nav--next {
  right: -16px;
}

/* Lightbox */
.lightbox-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(10, 37, 64, 0.95);
  z-index: 2000;
}

.lightbox-content {
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-8);
}

.lightbox-close {
  position: absolute;
  top: var(--space-8);
  right: var(--space-8);
  background: none;
  border: none;
  color: var(--color-white);
  cursor: pointer;
  z-index: 10;
}

.lightbox-image-container {
  position: relative;
  max-width: 90%;
  max-height: 90%;
}

.lightbox-image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.lightbox-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: var(--color-white);
  border: none;
  border-radius: var(--radius-full);
  width: 56px;
  height: 56px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: var(--transition-base);
}

.lightbox-nav:hover {
  background: var(--color-gray-100);
}

.lightbox-nav--prev {
  left: var(--space-8);
}

.lightbox-nav--next {
  right: var(--space-8);
}

.lightbox-counter {
  position: absolute;
  bottom: var(--space-8);
  color: var(--color-white);
  font-size: var(--text-lg);
}

/* Product Information */
.product-info-container {
  position: sticky;
  top: 100px;
}

.product-info {
  margin-bottom: var(--space-8);
}

.product-title {
  font-family: var(--font-primary);
  font-size: var(--text-3xl);
  font-weight: var(--font-bold);
  color: var(--color-navy);
  margin-bottom: var(--space-4);
  line-height: 1.2;
}

.product-vendor {
  color: var(--color-gray-600);
  font-size: var(--text-base);
  margin-bottom: var(--space-4);
}

.vendor-label {
  font-weight: var(--font-medium);
}

.vendor-name {
  color: var(--color-gold);
  font-weight: var(--font-semibold);
}

/* Price Styles */
.product-price-container {
  margin-bottom: var(--space-6);
}

.price-sale {
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

.price-current {
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  color: var(--color-burgundy);
}

.price-original {
  font-size: var(--text-lg);
  color: var(--color-gray-500);
  text-decoration: line-through;
}

.price-savings {
  font-size: var(--text-sm);
  color: var(--color-burgundy);
  background: rgba(139, 38, 53, 0.1);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-sm);
}

.price-regular .price-current {
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  color: var(--color-navy);
}

/* Rating Styles */
.product-rating {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  margin-bottom: var(--space-6);
}

.rating-stars {
  display: flex;
  gap: 2px;
}

.rating-value {
  color: var(--color-gray-600);
  font-size: var(--text-sm);
}

.product-rating--placeholder .rating-value {
  color: var(--color-gray-500);
  font-style: italic;
}

/* Product Description */
.product-description-excerpt {
  margin-bottom: var(--space-6);
}

.description-content {
  color: var(--color-gray-700);
  line-height: 1.6;
  margin-bottom: var(--space-3);
}

.description-toggle {
  background: none;
  border: none;
  color: var(--color-gold);
  cursor: pointer;
  font-size: var(--text-sm);
  display: flex;
  align-items: center;
  gap: var(--space-1);
}

/* Product Badges */
.product-badges {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
  margin-bottom: var(--space-6);
}

.product-badge {
  padding: var(--space-1) var(--space-3);
  border-radius: var(--radius-full);
  font-size: var(--text-xs);
  font-weight: var(--font-medium);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.product-badge--sale {
  background: var(--color-burgundy);
  color: var(--color-white);
}

.product-badge--new {
  background: var(--color-gold);
  color: var(--color-navy);
}

.product-badge--bestseller {
  background: var(--color-navy);
  color: var(--color-white);
}

.product-badge--limited {
  background: linear-gradient(45deg, var(--color-gold), var(--color-burgundy));
  color: var(--color-white);
}

.product-badge--exclusive {
  background: var(--color-cream);
  color: var(--color-navy);
  border: 1px solid var(--color-gold);
}

/* Availability Status */
.availability-status {
  margin-bottom: var(--space-6);
}

.status-available,
.status-sold-out {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
}

.status-available {
  color: var(--color-support);
}

.status-sold-out {
  color: var(--color-gray-500);
}

/* Variant Picker */
.variant-picker {
  margin-bottom: var(--space-8);
}

.variant-option {
  margin-bottom: var(--space-6);
}

.option-label {
  display: block;
  font-weight: var(--font-semibold);
  margin-bottom: var(--space-3);
  color: var(--color-navy);
}

.option-selected-value {
  color: var(--color-gold);
  font-weight: var(--font-medium);
}

.option-values {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-3);
}

.option-input {
  display: none;
}

/* Color Swatches */
.option-swatch--color {
  position: relative;
  width: 48px;
  height: 48px;
  border-radius: var(--radius-full);
  border: 2px solid var(--color-gray-300);
  cursor: pointer;
  transition: var(--transition-base);
  display: flex;
  align-items: center;
  justify-content: center;
}

.option-input:checked + .option-swatch--color {
  border-color: var(--color-gold);
  box-shadow: 0 0 0 2px var(--color-white), 0 0 0 4px var(--color-gold);
}

.option-swatch--color:hover {
  border-color: var(--color-gray-400);
}

.option-swatch--disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.option-swatch--disabled:hover {
  border-color: var(--color-gray-300);
}

.swatch-color {
  width: 32px;
  height: 32px;
  border-radius: var(--radius-full);
  border: 1px solid var(--color-gray-200);
}

.swatch-label {
  position: absolute;
  bottom: -20px;
  font-size: var(--text-xs);
  color: var(--color-gray-600);
}

/* Size Buttons */
.option-button--size {
  padding: var(--space-2) var(--space-4);
  border: 2px solid var(--color-gray-300);
  border-radius: var(--radius-base);
  background: var(--color-white);
  cursor: pointer;
  transition: var(--transition-base);
  font-weight: var(--font-medium);
  position: relative;
}

.option-input:checked + .option-button--size {
  border-color: var(--color-gold);
  background: var(--color-gold);
  color: var(--color-navy);
}

.option-button--size:hover {
  border-color: var(--color-gray-400);
}

.option-button--disabled {
  opacity: 0.5;
  cursor: not-allowed;
  position: relative;
}

.option-button--disabled:hover {
  border-color: var(--color-gray-300);
}

.size-sold-out {
  position: absolute;
  top: -8px;
  right: -8px;
  background: var(--color-burgundy);
  color: var(--color-white);
  font-size: 10px;
  padding: 2px 4px;
  border-radius: var(--radius-sm);
}

/* Standard Option Buttons */
.option-button--standard {
  padding: var(--space-2) var(--space-4);
  border: 2px solid var(--color-gray-300);
  border-radius: var(--radius-base);
  background: var(--color-white);
  cursor: pointer;
  transition: var(--transition-base);
  font-weight: var(--font-medium);
}

.option-input:checked + .option-button--standard {
  border-color: var(--color-gold);
  background: var(--color-gold);
  color: var(--color-navy);
}

.option-button--standard:hover {
  border-color: var(--color-gray-400);
}

.option-button--standard.option-button--disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.option-button--standard.option-button--disabled:hover {
  border-color: var(--color-gray-300);
}

/* Variant Summary */
.variant-summary {
  background: var(--color-gray-100);
  padding: var(--space-4);
  border-radius: var(--radius-base);
  margin-bottom: var(--space-6);
}

.summary-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: var(--space-2);
}

.summary-item:last-child {
  margin-bottom: 0;
}

.summary-label {
  color: var(--color-gray-600);
  font-size: var(--text-sm);
}

.summary-value {
  color: var(--color-navy);
  font-weight: var(--font-medium);
  font-size: var(--text-sm);
}

/* Quantity Selector */
.quantity-selector {
  margin-bottom: var(--space-6);
}

.quantity-label {
  display: block;
  font-weight: var(--font-semibold);
  margin-bottom: var(--space-3);
  color: var(--color-navy);
}

.quantity-controls {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  max-width: 150px;
}

.quantity-btn {
  background: var(--color-gray-200);
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-base);
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: var(--transition-base);
}

.quantity-btn:hover {
  background: var(--color-gray-300);
}

.quantity-input {
  width: 60px;
  height: 40px;
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-base);
  text-align: center;
  font-weight: var(--font-medium);
}

/* Variant Notice */
.variant-notice {
  display: none;
  background: var(--color-gray-100);
  padding: var(--space-3);
  border-radius: var(--radius-base);
  margin-bottom: var(--space-6);
}

.notice-content {
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.notice-text {
  color: var(--color-gray-600);
  font-size: var(--text-sm);
}

/* Product Form */
.product-form {
  margin-bottom: var(--space-8);
}

.form-actions {
  margin-bottom: var(--space-6);
}

.add-to-cart-btn {
  width: 100%;
  background: var(--color-gold);
  color: var(--color-navy);
  border: none;
  border-radius: var(--radius-lg);
  padding: var(--space-4) var(--space-6);
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  cursor: pointer;
  transition: var(--transition-base);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-3);
  position: relative;
}

.add-to-cart-btn:hover:not(:disabled) {
  background: var(--color-burgundy);
  color: var(--color-white);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.add-to-cart-btn:disabled {
  background: var(--color-gray-300);
  color: var(--color-gray-600);
  cursor: not-allowed;
}

.btn-text {
  font-weight: var(--font-semibold);
}

.btn-price {
  margin-left: auto;
  font-weight: var(--font-bold);
}

.btn-loading {
  display: none;
  align-items: center;
  gap: var(--space-2);
}

.add-to-cart-btn.loading .btn-text,
.add-to-cart-btn.loading .btn-price {
  display: none;
}

.add-to-cart-btn.loading .btn-loading {
  display: flex;
}

.alternative-actions {
  display: flex;
  gap: var(--space-4);
  margin-top: var(--space-4);
}

.wishlist-btn,
.share-btn {
  flex: 1;
  background: var(--color-white);
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-base);
  padding: var(--space-3);
  cursor: pointer;
  transition: var(--transition-base);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  font-size: var(--text-sm);
}

.wishlist-btn:hover,
.share-btn:hover {
  background: var(--color-gray-100);
  border-color: var(--color-gray-400);
}

/* Payment Terms */
.payment-terms {
  border-top: 1px solid var(--color-gray-200);
  padding-top: var(--space-4);
}

.terms-item {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  margin-bottom: var(--space-2);
  font-size: var(--text-sm);
  color: var(--color-gray-600);
}

.terms-item:last-child {
  margin-bottom: 0;
}

/* Form Messages */
.form-success,
.form-error {
  display: none;
  background: var(--color-gray-100);
  padding: var(--space-4);
  border-radius: var(--radius-base);
  margin-bottom: var(--space-4);
}

.success-content,
.error-content {
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

.success-title,
.error-title {
  font-weight: var(--font-semibold);
  margin-bottom: var(--space-1);
}

.success-title {
  color: var(--color-support);
}

.error-title {
  color: var(--color-burgundy);
}

.success-message,
.error-message {
  color: var(--color-gray-600);
  font-size: var(--text-sm);
}

.success-action,
.error-action {
  margin-left: auto;
  background: var(--color-gold);
  color: var(--color-navy);
  border: none;
  border-radius: var(--radius-base);
  padding: var(--space-2) var(--space-3);
  font-size: var(--text-sm);
  cursor: pointer;
  transition: var(--transition-base);
}

.success-action:hover,
.error-action:hover {
  background: var(--color-burgundy);
  color: var(--color-white);
}

/* Share Modal */
.share-modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(10, 37, 64, 0.8);
  z-index: 2000;
}

.share-modal .modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: var(--color-white);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  max-width: 400px;
  width: 90%;
}

.modal-close {
  position: absolute;
  top: var(--space-4);
  right: var(--space-4);
  background: none;
  border: none;
  cursor: pointer;
}

.modal-title {
  font-family: var(--font-primary);
  font-size: var(--text-xl);
  margin-bottom: var(--space-4);
  color: var(--color-navy);
}

.share-options {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-3);
}

.share-option {
  background: var(--color-gray-100);
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-base);
  padding: var(--space-3);
  cursor: pointer;
  transition: var(--transition-base);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  font-size: var(--text-sm);
}

.share-option:hover {
  background: var(--color-gray-200);
  border-color: var(--color-gray-400);
}

/* Product Metadata */
.product-metadata {
  border-top: 1px solid var(--color-gray-200);
  padding-top: var(--space-4);
  margin-bottom: var(--space-6);
}

.metadata-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: var(--space-2);
  font-size: var(--text-sm);
}

.metadata-label {
  color: var(--color-gray-600);
  font-weight: var(--font-medium);
}

.metadata-value {
  color: var(--color-navy);
}

/* Trust Signals */
.trust-signals {
  background: var(--color-gray-100);
  padding: var(--space-4);
  border-radius: var(--radius-base);
  margin-bottom: var(--space-6);
}

.trust-signal {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  margin-bottom: var(--space-3);
}

.trust-signal:last-child {
  margin-bottom: 0;
}

.trust-icon {
  color: var(--color-gold);
  flex-shrink: 0;
}

.trust-content {
  display: flex;
  flex-direction: column;
}

.trust-title {
  font-weight: var(--font-semibold);
  font-size: var(--text-sm);
  color: var(--color-navy);
}

.trust-description {
  font-size: var(--text-xs);
  color: var(--color-gray-600);
}

/* Product Details Section */
.product-details-section {
  border-top: 1px solid var(--color-gray-200);
  padding-top: var(--space-12);
  margin-bottom: var(--space-16);
}

.section-title {
  font-family: var(--font-primary);
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  color: var(--color-navy);
  margin-bottom: var(--space-6);
}

.product-description {
  margin-bottom: var(--space-8);
}

.description-content {
  color: var(--color-gray-700);
  line-height: 1.7;
}

.description-content p {
  margin-bottom: var(--space-4);
}

.description-content p:last-child {
  margin-bottom: 0;
}

/* Size Guide */
.size-guide-section {
  margin-bottom: var(--space-8);
}

.size-guide-toggle {
  background: none;
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-base);
  padding: var(--space-3) var(--space-4);
  cursor: pointer;
  transition: var(--transition-base);
  display: flex;
  align-items: center;
  gap: var(--space-2);
  font-weight: var(--font-medium);
}

.size-guide-toggle:hover {
  background: var(--color-gray-100);
  border-color: var(--color-gray-400);
}

.size-guide-modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(10, 37, 64, 0.8);
  z-index: 2000;
}

.size-guide-modal .modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: var(--color-white);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  max-width: 600px;
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-close {
  position: absolute;
  top: var(--space-4);
  right: var(--space-4);
  background: none;
  border: none;
  cursor: pointer;
}

.modal-title {
  font-family: var(--font-primary);
  font-size: var(--text-xl);
  margin-bottom: var(--space-4);
  color: var(--color-navy);
}

.size-table-container {
  margin-bottom: var(--space-4);
}

.size-table {
  width: 100%;
  border-collapse: collapse;
}

.size-table th,
.size-table td {
  border: 1px solid var(--color-gray-300);
  padding: var(--space-3);
  text-align: center;
}

.size-table th {
  background: var(--color-gray-100);
  font-weight: var(--font-semibold);
  color: var(--color-navy);
}

.size-guide-note {
  background: var(--color-gray-100);
  padding: var(--space-3);
  border-radius: var(--radius-base);
  font-size: var(--text-sm);
  color: var(--color-gray-600);
}

/* Reviews Section */
.reviews-section {
  margin-bottom: var(--space-8);
}

.reviews-placeholder {
  background: var(--color-gray-100);
  padding: var(--space-6);
  border-radius: var(--radius-base);
  text-align: center;
  color: var(--color-gray-600);
}

/* Related Products */
.related-products-section {
  border-top: 1px solid var(--color-gray-200);
  padding-top: var(--space-12);
}

.related-products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: var(--space-6);
}

.related-products-placeholder {
  grid-column: 1 / -1;
  background: var(--color-gray-100);
  padding: var(--space-6);
  border-radius: var(--radius-base);
  text-align: center;
  color: var(--color-gray-600);
}

/* Responsive Adjustments */
@media (max-width: 767px) {
  .product-page {
    padding: var(--space-6) var(--space-4);
  }
  
  .product-layout {
    gap: var(--space-8);
  }
  
  .product-title {
    font-size: var(--text-2xl);
  }
  
  .option-values {
    justify-content: center;
  }
  
  .alternative-actions {
    flex-direction: column;
  }
  
  .share-options {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 480px) {
  .product-page {
    padding: var(--space-4) var(--space-3);
  }
  
  .gallery-thumbnails {
    margin: 0 -var(--space-3);
  }
  
  .thumbnails-container {
    padding: 0 var(--space-3);
  }
}
  max-width: 800px;
  margin: 0 auto;
}

.collection-title {
  margin-bottom: var(--space-6);
  color: var(--color-navy);
}

.collection-description {
  color: var(--color-gray-600);
  line-height: var(--leading-relaxed);
}

.collection-controls {
  margin-bottom: var(--space-8);
  border-bottom: 1px solid var(--color-gray-200);
  padding-bottom: var(--space-6);
}

.collection-controls__container {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: var(--space-4);
}

.collection-filter-toggle {
  background: var(--color-white);
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-lg);
  padding: var(--space-3) var(--space-4);
  display: flex;
  align-items: center;
  gap: var(--space-2);
  cursor: pointer;
  transition: var(--transition-base);
  font-family: var(--font-secondary);
  font-size: var(--text-sm);
  color: var(--color-navy);
  
  &:hover {
    border-color: var(--color-gold);
