/* Luxury Shopify Theme - Premium Styling System */

/* CSS Variables - Luxury Color Palette */
:root {
  /* Primary Colors */
  --color-navy: #0A2540;
  --color-cream: #F8F5F0;
  --color-gold: #D4AF37;
  --color-burgundy: #8B2635;
  
  /* Semantic Colors */
  --color-primary: var(--color-navy);
  --color-secondary: var(--color-cream);
  --color-accent: var(--color-gold);
  --color-support: var(--color-burgundy);
  
  /* Neutral Colors */
  --color-white: #FFFFFF;
  --color-black: #000000;
  --color-gray-100: #F7FAFC;
  --color-gray-200: #EDF2F7;
  --color-gray-300: #E2E8F0;
  --color-gray-400: #CBD5E0;
  --color-gray-500: #A0AEC0;
  --color-gray-600: #718096;
  --color-gray-700: #4A5568;
  --color-gray-800: #2D3748;
  --color-gray-900: #1A202C;
  
  /* Spacing System */
  --space-1: 0.25rem;  /* 4px */
  --space-2: 0.5rem;   /* 8px */
  --space-3: 0.75rem;  /* 12px */
  --space-4: 1rem;     /* 16px */
  --space-5: 1.25rem;  /* 20px */
  --space-6: 1.5rem;   /* 24px */
  --space-8: 2rem;     /* 32px */
  --space-10: 2.5rem;  /* 40px */
  --space-12: 3rem;    /* 48px */
  --space-16: 4rem;    /* 64px */
  --space-20: 5rem;    /* 80px */
  --space-24: 6rem;    /* 96px */
  
  /* Border Radius */
  --radius-sm: 0.125rem;  /* 2px */
  --radius-base: 0.25rem; /* 4px */
  --radius-md: 0.375rem;  /* 6px */
  --radius-lg: 0.5rem;    /* 8px */
  --radius-xl: 0.75rem;   /* 12px */
  --radius-2xl: 1rem;     /* 16px */
  --radius-full: 9999px;
  
  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-base: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  
  /* Transitions */
  --transition-base: all 0.3s ease-in-out;
  --transition-fast: all 0.15s ease-in-out;
  --transition-slow: all 0.5s ease-in-out;
}

/* Reset & Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  background-color: var(--color-cream);
  color: var(--color-navy);
  line-height: var(--leading-normal);
  overflow-x: hidden;
}

/* Layout spacing to avoid content hidden behind fixed header */
#MainContent {
  margin-top: 80px; /* keep in sync with header height */
}

/* Header Styles */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: var(--color-white);
  box-shadow: var(--shadow-sm);
  transition: var(--transition-base);
}

.header__desktop {
  display: none;
  
  @media (min-width: 768px) {
    display: block;
  }
}

.header__mobile {
  display: block;
  
  @media (min-width: 768px) {
    display: none;
  }
}

.header__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: var(--space-4) var(--space-6);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header__logo-link {
  text-decoration: none;
  color: var(--color-navy);
  font-family: var(--font-primary);
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
}

.header__nav-list {
  display: flex;
  list-style: none;
  gap: var(--space-8);
}

.header__nav-link {
  text-decoration: none;
  color: var(--color-navy);
  font-weight: var(--font-medium);
  transition: var(--transition-base);
  position: relative;
  
  &:hover {
    color: var(--color-gold);
  }
  
  &::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-gold);
    transition: var(--transition-base);
  }
  
  &:hover::after {
    width: 100%;
  }
}

.header__actions {
  display: flex;
  align-items: center;
  gap: var(--space-4);
}

.header__action-btn {
  background: none;
  border: none;
  color: var(--color-navy);
  cursor: pointer;
  padding: var(--space-2);
  border-radius: var(--radius-base);
  transition: var(--transition-base);
  position: relative;
  
  &:hover {
    color: var(--color-gold);
    background-color: var(--color-gray-100);
  }
}

.header__cart-count {
  position: absolute;
  top: -4px;
  right: -4px;
  background-color: var(--color-burgundy);
  color: var(--color-white);
  font-size: var(--text-xs);
  padding: 2px 6px;
  border-radius: var(--radius-full);
  min-width: 18px;
  text-align: center;
}

/* Mobile Header */
.header__mobile-container {
  padding: var(--space-3) var(--space-4);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header__mobile-toggle {
  background: none;
  border: none;
  cursor: pointer;
  width: 24px;
  height: 24px;
  position: relative;
  
  span {
    display: block;
    height: 2px;
    width: 100%;
    background-color: var(--color-navy);
    margin: 4px 0;
    transition: var(--transition-base);
  }
}

/* Mobile Menu */
.mobile-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(10, 37, 64, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: var(--transition-base);
  
  &.active {
    opacity: 1;
    visibility: visible;
  }
}

.mobile-menu {
  position: fixed;
  top: 0;
  left: -100%;
  width: 300px;
  height: 100vh;
  background-color: var(--color-white);
  z-index: 1000;
  transition: var(--transition-base);
  box-shadow: var(--shadow-lg);
  
  &.active {
    left: 0;
  }
}

.mobile-menu__content {
  padding: var(--space-6);
  height: 100%;
}

.mobile-menu__close {
  background: none;
  border: none;
  color: var(--color-navy);
  cursor: pointer;
  margin-bottom: var(--space-8);
}

.mobile-menu__list {
  list-style: none;
}

.mobile-menu__item {
  margin-bottom: var(--space-4);
}

.mobile-menu__link {
  text-decoration: none;
  color: var(--color-navy);
  font-size: var(--text-lg);
  font-weight: var(--font-medium);
  transition: var(--transition-base);
  
  &:hover {
    color: var(--color-gold);
  }
}

/* ===== CART & CHECKOUT STYLES ===== */

/* Cart Page Styles */
.cart-page {
  margin-top: 80px; /* Account for fixed header */
  padding: var(--space-8) var(--space-6);
  min-height: 60vh;
}

.cart-page__container {
  max-width: 1200px;
  margin: 0 auto;
}

.cart-page__header {
  text-align: center;
  margin-bottom: var(--space-12);
}

.cart-page__title {
  font-family: var(--font-primary);
  font-size: var(--text-3xl);
  font-weight: var(--font-bold);
  color: var(--color-navy);
  margin-bottom: var(--space-2);
}

.cart-page__item-count {
  color: var(--color-gray-600);
  font-size: var(--text-lg);
}

.cart-page__content {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-12);
  
  @media (min-width: 1024px) {
    grid-template-columns: 2fr 1fr;
    gap: var(--space-16);
  }
}

.cart-page__items {
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.cart-page__continue {
  margin-top: var(--space-8);
}

/* Cart Item Styles */
.cart-item {
  background-color: var(--color-white);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  box-shadow: var(--shadow-sm);
  transition: var(--transition-base);
  position: relative;
  
  &:hover {
    box-shadow: var(--shadow-md);
  }
}

.cart-item__container {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: var(--space-6);
  align-items: start;
}

.cart-item__image {
  width: 120px;
  height: 120px;
  flex-shrink: 0;
}

.cart-item__image-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: var(--radius-md);
}

.cart-item__image-placeholder {
  width: 100%;
  height: 100%;
  background-color: var(--color-gray-200);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-item__details {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.cart-item__info {
  flex: 1;
}

.cart-item__title {
  font-family: var(--font-primary);
  font-size: var(--text-lg);
  font-weight: var(--font-medium);
  color: var(--color-navy);
  text-decoration: none;
  margin-bottom: var(--space-2);
  display: block;
  
  &:hover {
    color: var(--color-gold);
  }
}

.cart-item__variant {
  color: var(--color-gray-600);
  font-size: var(--text-sm);
  margin-bottom: var(--space-2);
}

.cart-item__selling-plan {
  color: var(--color-gold);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
  margin-bottom: var(--space-2);
}

.cart-item__properties {
  margin-bottom: var(--space-3);
}

.cart-item__property {
  display: flex;
  gap: var(--space-2);
  font-size: var(--text-sm);
  margin-bottom: var(--space-1);
}

.cart-item__property-name {
  color: var(--color-gray-600);
  font-weight: var(--font-medium);
}

.cart-item__property-value {
  color: var(--color-navy);
}

.cart-item__price {
  margin-bottom: var(--space-4);
}

.cart-item__original-price {
  color: var(--color-gray-500);
  text-decoration: line-through;
  margin-right: var(--space-2);
}

.cart-item__final-price {
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  color: var(--color-navy);
}

.cart-item__unit-price {
  display: block;
  font-size: var(--text-sm);
  color: var(--color-gray-600);
  margin-top: var(--space-1);
}

.cart-item__controls {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
}

.cart-item__quantity-label {
  display: block;
  font-size: var(--text-sm);
  color: var(--color-gray-600);
  margin-bottom: var(--space-2);
  font-weight: var(--font-medium);
}

.cart-item__remove {
  background: none;
  border: none;
  color: var(--color-gray-500);
  cursor: pointer;
  padding: var(--space-2);
  border-radius: var(--radius-base);
  transition: var(--transition-base);
  
  &:hover {
    color: var(--color-burgundy);
    background-color: var(--color-gray-100);
  }
}

.cart-item__loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-lg);
}

.cart-item__loading-spinner {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* Quantity Selector */
.quantity-selector {
  display: flex;
  align-items: center;
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-md);
  overflow: hidden;
}

.quantity-selector__btn {
  background: none;
  border: none;
  color: var(--color-navy);
  cursor: pointer;
  padding: var(--space-2) var(--space-3);
  transition: var(--transition-base);
  
  &:hover {
    background-color: var(--color-gray-100);
  }
  
  &:disabled {
    color: var(--color-gray-400);
    cursor: not-allowed;
  }
}

.quantity-selector__input {
  width: 60px;
  border: none;
  text-align: center;
  padding: var(--space-2);
  font-size: var(--text-base);
  color: var(--color-navy);
  background-color: transparent;
  
  &:focus {
    outline: none;
    background-color: var(--color-gray-100);
  }
}

.quantity-selector__value {
  width: 40px;
  text-align: center;
  padding: var(--space-2);
  font-size: var(--text-base);
  color: var(--color-navy);
  font-weight: var(--font-medium);
}

.quantity-selector--mini {
  border: none;
  
  .quantity-selector__btn {
    padding: var(--space-1) var(--space-2);
  }
  
  .quantity-selector__value {
    width: 30px;
    padding: var(--space-1);
  }
}

/* Cart Summary */
.cart-summary {
  background-color: var(--color-white);
  border-radius: var(--radius-lg);
  padding: var(--space-6);
  box-shadow: var(--shadow-sm);
  position: sticky;
  top: 100px;
}

.cart-summary__title {
  font-family: var(--font-primary);
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  color: var(--color-navy);
  margin-bottom: var(--space-6);
}

.cart-summary__details {
  margin-bottom: var(--space-6);
}

.cart-summary__row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-4);
  font-size: var(--text-base);
}

.cart-summary__price {
  font-weight: var(--font-medium);
}

.cart-summary__discount {
  color: var(--color-burgundy);
  font-weight: var(--font-medium);
}

.cart-summary__shipping,
.cart-summary__tax {
  color: var(--color-gray-600);
}

.cart-summary__divider {
  height: 1px;
  background-color: var(--color-gray-300);
  margin: var(--space-4) 0;
}

.cart-summary__total {
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  margin-top: var(--space-2);
}

.cart-summary__total-price {
  font-size: var(--text-xl);
  color: var(--color-gold);
}

.cart-summary__discount-form {
  margin-bottom: var(--space-6);
}

.discount-form__field {
  display: flex;
  gap: var(--space-2);
}

.discount-form__input {
  flex: 1;
  padding: var(--space-3);
  border: 1px solid var(--color-gray-300);
  border-radius: var(--radius-md);
  font-size: var(--text-base);
  
  &:focus {
    outline: none;
    border-color: var(--color-gold);
  }
}

.discount-form__button {
  background-color: var(--color-gray-800);
  color: var(--color-white);
  border: none;
  padding: var(--space-3) var(--space-4);
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: var(--font-medium);
  transition: var(--transition-base);
  
  &:hover {
    background-color: var(--color-gray-900);
  }
}

.discount-form__message {
  margin-top: var(--space-2);
  font-size: var(--text-sm);
  padding: var(--space-2);
  border-radius: var(--radius-base);
}

.discount-form__message--success {
  background-color: rgba(34, 197, 94, 0.1);
  color: #16a34a;
}

.discount-form__message--error {
  background-color: rgba(239, 68, 68, 0.1);
  color: #dc2626;
}

.cart-summary__actions {
  margin-bottom: var(--space-6);
}

.cart-summary__trust {
  border-top: 1px solid var(--color-gray-200);
  padding-top: var(--space-4);
}

/* Trust Signals */
.trust-signals {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-4);
}

.trust-signal {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  font-size: var(--text-sm);
  color: var(--color-gray-600);
}

.trust-signals--mini {
  .trust-signal {
    font-size: var(--text-xs);
  }
}

/* Empty Cart */
.cart-empty {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 50vh;
  text-align: center;
}

.cart-empty__content {
  max-width: 400px;
}

.cart-empty__icon {
  margin-bottom: var(--space-6);
}

.cart-empty__title {
  font-family: var(--font-primary);
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  color: var(--color-navy);
  margin-bottom: var(--space-4);
}

.cart-empty__description {
  color: var(--color-gray-600);
  margin-bottom: var(--space-6);
  line-height: var(--leading-relaxed);
}

/* Mini Cart Styles */
.mini-cart {
  position: fixed;
  top: 0;
  right: -100%;
  width: 100%;
  height: 100vh;
  z-index: 1100;
  transition: var(--transition-base);
  
  @media (min-width: 768px) {
    width: 400px;
    right: -400px;
  }
  
  &.active {
    right: 0;
  }
}

.mini-cart__overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(10, 37, 64, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: var(--transition-base);
  
  .mini-cart.active & {
    opacity: 1;
    visibility: visible;
  }
}

.mini-cart__content {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  background-color: var(--color-white);
  display: flex;
  flex-direction: column;
  box-shadow: var(--shadow-xl);
  
  @media (min-width: 768px) {
    width: 400px;
  }
}

.mini-cart__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-6);
  border-bottom: 1px solid var(--color-gray-200);
}

.mini-cart__title {
  font-family: var(--font-primary);
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  color: var(--color-navy);
}

.mini-cart__close {
  background: none;
  border: none;
  color: var(--color-gray-500);
  cursor: pointer;
  padding: var(--space-2);
  border-radius: var(--radius-base);
  transition: var(--transition-base);
  
  &:hover {
    color: var(--color-navy);
    background-color: var(--color-gray-100);
  }
}

.mini-cart__items {
  flex: 1;
  overflow-y: auto;
  padding: var(--space-4);
}

.mini-cart__empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  text-align: center;
  color: var(--color-gray-500);
}

.mini-cart__empty-text {
  margin-top: var(--space-4);
  font-size: var(--text-lg);
}

/* Mini Cart Item */
.mini-cart-item {
  display: flex;
  margin-bottom: var(--space-4);
  padding: var(--space-3);
  border-radius: var(--radius-md);
  transition: var(--transition-base);
  
  &:hover {
    background-color: var(--color-gray-100);
  }
}

.mini-cart-item__container {
  display: flex;
  align-items: flex-start;
  gap: var(--space-3);
  flex: 1;
}

.mini-cart-item__image {
  width: 80px;
  height: 80px;
  flex-shrink: 0;
}

.mini-cart-item__image-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: var(--radius-base);
}

.mini-cart-item__image-placeholder {
  width: 100%;
  height: 100%;
  background-color: var(--color-gray-200);
  border-radius: var(--radius-base);
  display: flex;
  align-items: center;
  justify-content: center;
}

.mini-cart-item__details {
  flex: 1;
  min-width: 0;
}

.mini-cart-item__title {
  font-size: var(--text-base);
  font-weight: var(--font-medium);
  color: var(--color-navy);
  text-decoration: none;
  display: block;
  margin-bottom: var(--space-1);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  
  &:hover {
    color: var(--color-gold);
  }
}

.mini-cart-item__variant {
  color: var(--color-gray-600);
  font-size: var(--text-sm);
  margin-bottom: var(--space-2);
}

.mini-cart-item__price {
  margin-bottom: var(--space-2);
}

.mini-cart-item__original-price {
  color: var(--color-gray-500);
  text-decoration: line-through;
  margin-right: var(--space-1);
  font-size: var(--text-sm);
}

.mini-cart-item__final-price {
  font-size: var(--text-base);
  font-weight: var(--font-bold);
  color: var(--color-navy);
}

.mini-cart-item__quantity {
  margin-top: var(--space-2);
}

.mini-cart-item__remove {
  background: none;
  border: none;
  color: var(--color-gray-400);
  cursor: pointer;
  padding: var(--space-1);
  border-radius: var(--radius-base);
  transition: var(--transition-base);
  flex-shrink: 0;
  
  &:hover {
    color: var(--color-burgundy);
    background-color: var(--color-gray-100);
  }
}

.mini-cart__footer {
