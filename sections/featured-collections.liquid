<!-- Featured Collections - Hijab Store -->
<section class="featured-collections" data-section-id="{{ section.id }}">
  <div class="featured-collections__container">
    <div class="featured-collections__header">
      <h2 class="section-title">Shop by Collection</h2>
      <p class="section-subtitle">Find your perfect hijab for every occasion</p>
    </div>

    <div class="featured-collections__grid">
      {% for block in section.blocks %}
        {% assign col = block.settings.collection %}
        <a class="featured-collection-card" href="{{ col.url }}">
          <div class="featured-collection-card__image">
            {% if block.settings.image %}
              {{ block.settings.image | image_url: width: 600, height: 400, crop: 'center' | image_tag: alt: col.title, class: 'featured-collection-card__img' }}
            {% elsif col.image %}
              {{ col.image | image_url: width: 600, height: 400, crop: 'center' | image_tag: alt: col.title, class: 'featured-collection-card__img' }}
            {% else %}
              <div class="featured-collection-card__placeholder"></div>
            {% endif %}
          </div>
          <div class="featured-collection-card__content">
            <h3 class="card-title">{{ block.settings.title | default: col.title }}</h3>
            {% if block.settings.subtitle != blank %}
              <p class="card-subtitle">{{ block.settings.subtitle }}</p>
            {% endif %}
          </div>
        </a>
      {% endfor %}
    </div>
  </div>

  <style>
  .featured-collections { padding: var(--space-16) 0; background: var(--color-cream); }
  .featured-collections__container { max-width: 1200px; margin: 0 auto; padding: 0 var(--space-6); }
  .featured-collections__header { text-align: center; margin-bottom: var(--space-10); }
  .featured-collections__grid { display: grid; grid-template-columns: 1fr; gap: var(--space-6); }
  @media (min-width: 768px) { .featured-collections__grid { grid-template-columns: repeat(3, 1fr);} }
  .featured-collection-card { display: block; background: var(--color-white); border-radius: var(--radius-lg); overflow: hidden; box-shadow: var(--shadow-sm); transition: var(--transition-base); text-decoration: none; color: inherit; }
  .featured-collection-card:hover { transform: translateY(-2px); box-shadow: var(--shadow-md); }
  .featured-collection-card__image { aspect-ratio: 3 / 2; background: var(--color-gray-200); }
  .featured-collection-card__img { width: 100%; height: 100%; object-fit: cover; display: block; }
  .featured-collection-card__placeholder { width: 100%; height: 100%; background: var(--color-gray-200); }
  .featured-collection-card__content { padding: var(--space-4) var(--space-5); }
  .card-title { font-family: var(--font-primary); font-size: var(--text-xl); }
  .card-subtitle { color: var(--color-gray-600); margin-top: var(--space-1); }
  </style>

  {% schema %}
  {
    "name": "Featured Collections",
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          { "type": "collection", "id": "collection", "label": "Collection" },
          { "type": "image_picker", "id": "image", "label": "Custom image (optional)" },
          { "type": "text", "id": "title", "label": "Title" },
          { "type": "text", "id": "subtitle", "label": "Subtitle" }
        ]
      }
    ],
    "max_blocks": 6,
    "presets": [
      {
        "name": "Featured Collections",
        "category": "Collections",
        "blocks": [
          { "type": "collection" },
          { "type": "collection" },
          { "type": "collection" }
        ]
      }
    ]
  }
  {% endschema %}
</section>


