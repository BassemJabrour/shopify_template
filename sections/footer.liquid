<footer class="footer" role="contentinfo">
  <div class="footer__container">
    <!-- Footer Columns -->
    <div class="footer__columns">
      <!-- Brand Column -->
      <div class="footer__column footer__brand">
        <div class="footer__logo">
          {%- if section.settings.logo != blank -%}
            {{ section.settings.logo | image_url: width: 120 | image_tag: alt: shop.name, class: 'footer__logo-image' }}
          {%- else -%}
            <span class="footer__logo-text">{{ shop.name }}</span>
          {%- endif -%}
        </div>
        
        <p class="footer__description">
          {{ section.settings.brand_description | default: "Luxury women's clothing boutique offering premium quality and timeless elegance." }}
        </p>
        
        <!-- Social Links -->
        <div class="footer__social">
          {%- if section.settings.show_social_icons -%}
            <ul class="footer__social-list">
              {%- if section.settings.social_facebook_link != blank -%}
                <li class="footer__social-item">
                  <a href="{{ section.settings.social_facebook_link }}" class="footer__social-link" aria-label="Facebook">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                      <path d="M18.896 0H1.104C0.494 0 0 0.494 0 1.104v17.792C0 19.506 0.494 20 1.104 20h9.58v-7.745H8.076V9.237h2.608V7.01c0-2.583 1.578-3.99 3.883-3.99 1.104 0 2.052.082 2.329.119v2.7h-1.598c-1.254 0-1.496.597-1.496 1.47v1.928h2.989l-0.389 3.018h-2.6V20h5.098c0.61 0 1.104-0.494 1.104-1.104V1.104C20 0.494 19.506 0 18.896 0z" fill="currentColor"/>
                    </svg>
                  </a>
                </li>
              {%- endif -%}
              
              {%- if section.settings.social_instagram_link != blank -%}
                <li class="footer__social-item">
                  <a href="{{ section.settings.social_instagram_link }}" class="footer__social-link" aria-label="Instagram">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                      <path d="M14.828 0H5.172C2.317 0 0 2.317 0 5.172v9.656C0 17.683 2.317 20 5.172 20h9.656C17.683 20 20 17.683 20 14.828V5.172C20 2.317 17.683 0 14.828 0zm2.344 14.828c0 1.293-1.051 2.344-2.344 2.344H5.172c-1.293 0-2.344-1.051-2.344-2.344V5.172c0-1.293 1.051-2.344 2.344-2.344h9.656c1.293 0 2.344 1.051 2.344 2.344v9.656z" fill="currentColor"/>
                      <path d="M10 4.844c-2.844 0-5.156 2.312-5.156 5.156S7.156 15.156 10 15.156s5.156-2.312 5.156-5.156S12.844 4.844 10 4.844zm0 8.438c-1.812 0-3.281-1.469-3.281-3.281S8.188 6.719 10 6.719s3.281 1.469 3.281 3.281S11.812 13.281 10 13.281z" fill="currentColor"/>
                      <path d="M15.375 5.844a1.031 1.031 0 1 0 0-2.062 1.031 1.031 0 0 0 0 2.062z" fill="currentColor"/>
                    </svg>
                  </a>
                </li>
              {%- endif -%}
              
              {%- if section.settings.social_pinterest_link != blank -%}
                <li class="footer__social-item">
                  <a href="{{ section.settings.social_pinterest_link }}" class="footer__social-link" aria-label="Pinterest">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                      <path d="M10 0C4.477 0 0 4.477 0 10s4.477 10 10 10 10-4.477 10-10S15.523 0 10 0zm1.328 15.625c-1.484 0-2.875-.797-2.875-2.875 0-.75.375-1.578 1.078-1.875.094-.031.188-.063.281-.063.375 0 .469.234.563.656.063.281.188.938.25 1.203.094.469.188.656.375.844.25.25.625.188.938-.125.563-.563.938-1.375.938-2.469 0-1.969-1.406-3.375-3.406-3.375-2.375 0-3.75 1.719-3.75 3.844 0 1.031.375 1.938 1.031 2.281.094.063.188.094.188.188 0 .094 0 .125-.063.188-.125.156-.375.5-.5.719-.156.281-.219.375-.219.594 0 .563.344.969.906.969.563 0 1.125-.375 1.406-.938.375-.75.625-1.688.625-2.625 0-1.094-.719-1.906-1.75-1.906-1.375 0-2.469 1.406-2.469 3.281 0 .75.25 1.313.625 1.656.063.063.094.125.094.188 0 .125-.063.25-.188.313-.063.031-.125.063-.188.063-.25 0-.594-.219-.844-.5-.375-.438-.625-1.031-.625-1.844 0-2.125 1.594-4.375 4.75-4.375 2.5 0 4.438 1.75 4.438 4.125 0 2.5-1.406 4.375-3.438 4.375-.656 0-1.281-.219-1.75-.5l-.469.5c-.375.438-.75.875-1.125 1.25.75.25 1.563.375 2.438.375 3.75 0 6.875-3.125 6.875-6.875S13.75 3.125 10 3.125 3.125 6.25 3.125 10s3.125 6.875 6.875 6.875z" fill="currentColor"/>
                    </svg>
                  </a>
                </li>
              {%- endif -%}
            </ul>
          {%- endif -%}
        </div>
      </div>
      
      <!-- Quick Links Column -->
      <div class="footer__column footer__links">
        <h3 class="footer__column-title">Quick Links</h3>
        <ul class="footer__link-list">
          {%- for link in linklists.footer.links -%}
            <li class="footer__link-item">
              <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
            </li>
          {%- endfor -%}
          <li class="footer__link-item">
            <a href="/collections/all" class="footer__link">Shop All</a>
          </li>
          <li class="footer__link-item">
            <a href="/pages/about" class="footer__link">About Us</a>
          </li>
          <li class="footer__link-item">
            <a href="/pages/contact" class="footer__link">Contact</a>
          </li>
          <li class="footer__link-item">
            <a href="/pages/shipping-returns" class="footer__link">Shipping & Returns</a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Footer Bottom -->
    <div class="footer__bottom">
      <div class="footer__copyright">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      </div>
      
      <div class="footer__payment-methods">
        {%- if section.settings.show_payment_icons -%}
          <div class="footer__payment-icons">
            <span class="footer__payment-text">We accept:</span>
            <!-- Payment icons would be added here -->
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer logo"
    },
    {
      "type": "textarea",
      "id": "brand_description",
      "label": "Brand description",
      "default": "Luxury women's clothing boutique offering premium quality and timeless elegance."
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "Show social icons",
      "default": true
    },
    {
      "type": "url",
      "id": "social_facebook_link",
      "label": "Facebook link"
    },
    {
      "type": "url",
      "id": "social_instagram_link",
      "label": "Instagram link"
    },
    {
      "type": "url",
      "id": "social_pinterest_link",
      "label": "Pinterest link"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ]
}
{% endschema %}