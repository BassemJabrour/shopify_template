<!-- Password Page -->
<div class="password-page">
  <div class="password-page__container">
    <div class="password-page__content">
      <div class="password-page__header">
        <h1 class="password-page__title">{{ shop.name }}</h1>
        <p class="password-page__subtitle">Coming Soon</p>
      </div>
      
      <div class="password-page__message">
        <p>Our luxury collection is launching soon. Enter your email below to be the first to know when we open.</p>
      </div>
      
      <form class="password-page__form" id="password-form">
        <div class="password-page__form-group">
          <input 
            type="email" 
            name="email" 
            placeholder="Enter your email" 
            class="password-page__input"
            required
            aria-label="Enter your email to be notified"
          >
          <button type="submit" class="password-page__button">Notify Me</button>
        </div>
        <div class="password-page__form-message" id="password-message"></div>
      </form>
      
      <div class="password-page__social">
        <p class="password-page__social-title">Follow us for updates</p>
        <div class="password-page__social-links">
          <a href="#" class="password-page__social-link" aria-label="Instagram">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <rect x="2" y="2" width="20" height="20" rx="5" stroke="currentColor" stroke-width="2"/>
              <circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="2"/>
              <circle cx="18" cy="6" r="1" fill="currentColor"/>
            </svg>
          </a>
          <a href="#" class="password-page__social-link" aria-label="Facebook">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M18 2H15C13.6739 2 12.4021 2.52678 11.4645 3.46447C10.5268 4.40215 10 5.67392 10 7V10H7V14H10V22H14V14H17L18 10H14V7C14 6.73478 14.1054 6.48043 14.2929 6.29289C14.4804 6.10536 14.7348 6 15 6H18V2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="#" class="password-page__social-link" aria-label="Twitter">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M23 3C22.0424 3.67548 20.9821 4.19211 19.86 4.53C19.2577 3.83751 18.4573 3.34669 17.567 3.12393C16.6767 2.90116 15.7395 2.9572 14.8821 3.28445C14.0247 3.61171 13.2884 4.1944 12.773 4.95372C12.2575 5.71303 11.9877 6.61234 12 7.53V8.53C10.2426 8.57558 8.50127 8.18581 6.93101 7.39545C5.36074 6.60508 4.01032 5.43864 3 4C3 4 -1 13 8 17C5.94053 18.398 3.48716 19.0989 1 19C10 24 21 19 21 7.5C20.9991 7.22146 20.9723 6.94359 20.92 6.67C21.9406 5.66349 22.6608 4.39271 23 3V3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

