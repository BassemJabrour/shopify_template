<!-- Product Template - Luxury Women's Clothing -->
{% layout none %}

{% section 'main-product' %}

<!-- Product JavaScript -->
{{ 'product.js.liquid' | asset_url | script_tag }}

<script type="application/json" id="ProductJson-{{ product.id }}">
  {{ product | json }}
</script>

<script type="application/json" id="ProductVariantsJson-{{ product.id }}">
  [
    {% for variant in product.variants %}
      {
        "id": {{ variant.id }},
        "title": {{ variant.title | json }},
        "available": {{ variant.available | json }},
        "price": {{ variant.price | json }},
        "compare_at_price": {{ variant.compare_at_price | json }},
        "featured_image": {% if variant.featured_image %}{
          "src": {{ variant.featured_image.src | image_url: width: 600 | json }},
          "alt": {{ variant.featured_image.alt | json }}
        }{% else %}null{% endif %},
        "options": [
          {% for option in variant.options %}
            {{ option | json }}{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ],
        "inventory_quantity": {{ variant.inventory_quantity | json }},
        "inventory_policy": {{ variant.inventory_policy | json }}
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
</script>