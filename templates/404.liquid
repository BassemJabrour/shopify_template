<!-- 404 Error Page -->
<div class="page-404">
  <div class="page-404__container">
    <div class="page-404__content">
      <div class="page-404__number">404</div>
      <h1 class="page-404__title">Page Not Found</h1>
      <p class="page-404__description">
        The page you are looking for doesn't exist or has been moved.
      </p>
      <div class="page-404__actions">
        <a href="/" class="btn btn--primary">Return to Home</a>
        <a href="/collections/all" class="btn btn--outline">Continue Shopping</a>
      </div>
    </div>
    
    <div class="page-404__image">
      <svg width="400" height="300" viewBox="0 0 400 300" fill="none">
        <rect width="400" height="300" fill="var(--color-gray-50)"/>
        <circle cx="200" cy="150" r="80" stroke="var(--color-gold)" stroke-width="2" fill="none"/>
        <path d="M160 110L240 190M160 190L240 110" stroke="var(--color-gold)" stroke-width="3" stroke-linecap="round"/>
      </svg>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "404 Page",
  "settings": [],
  "presets": [
    {
      "name": "404 Page"
    }
  ]
}
{% endschema %}