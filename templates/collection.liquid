<!-- Collection Template - Luxury Women's Clothing -->
{% paginate collection.products by 12 %}

<div class="collection-page" data-section-id="{{ section.id }}" data-section-type="collection-template">
  <!-- Collection Header -->
  <div class="collection-header">
    <div class="collection-header__container">
      <h1 class="collection-title text-primary text-4xl text-bold">{{ collection.title }}</h1>
      
      {% if collection.description != blank %}
        <div class="collection-description text-secondary text-lg leading-relaxed">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Collection Controls (Filters & Sort) -->
  <div class="collection-controls">
    <div class="collection-controls__container">
      <!-- Filter Toggle (Mobile) -->
      <button class="collection-filter-toggle" data-filter-toggle>
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M3 4C3 3.44772 3.44772 3 4 3H16C16.5523 3 17 3.44772 17 4C17 4.55228 16.5523 5 16 5H4C3.44772 5 3 4.55228 3 4Z" fill="currentColor"/>
          <path d="M3 10C3 9.44772 3.44772 9 4 9H10C10.5523 9 11 9.44772 11 10C11 10.5523 10.5523 11 10 11H4C3.44772 11 3 10.5523 3 10Z" fill="currentColor"/>
          <path d="M3 16C3 15.4477 3.44772 15 4 15H13C13.5523 15 14 15.4477 14 16C14 16.5523 13.5523 17 13 17H4C3.44772 17 3 16.5523 3 16Z" fill="currentColor"/>
        </svg>
        Filters
      </button>

      <!-- Active Filters -->
      <div class="active-filters" data-active-filters>
        {% if current_tags %}
          {% for tag in current_tags %}
            <span class="active-filter-tag">
              {{ tag | remove: 'filter_' | remove: 'tag_' }}
              <button class="active-filter-remove" data-filter-remove="{{ tag | handle }}">×</button>
            </span>
          {% endfor %}
        {% endif %}
      </div>

      <!-- Sort Options -->
      <div class="collection-sort">
        <label for="SortBy" class="sort-label text-secondary text-sm text-medium">Sort by:</label>
        <select name="sort_by" id="SortBy" class="sort-select">
          <option value="manual" {% if collection.sort_by == 'manual' %}selected{% endif %}>Featured</option>
          <option value="best-selling" {% if collection.sort_by == 'best-selling' %}selected{% endif %}>Best Selling</option>
          <option value="title-ascending" {% if collection.sort_by == 'title-ascending' %}selected{% endif %}>Alphabetically, A-Z</option>
          <option value="title-descending" {% if collection.sort_by == 'title-descending' %}selected{% endif %}>Alphabetically, Z-A</option>
          <option value="price-ascending" {% if collection.sort_by == 'price-ascending' %}selected{% endif %}>Price, Low to High</option>
          <option value="price-descending" {% if collection.sort_by == 'price-descending' %}selected{% endif %}>Price, High to Low</option>
          <option value="created-descending" {% if collection.sort_by == 'created-descending' %}selected{% endif %}>Date, New to Old</option>
          <option value="created-ascending" {% if collection.sort_by == 'created-ascending' %}selected{% endif %}>Date, Old to New</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Collection Content -->
  <div class="collection-content">
    <!-- Filters Sidebar -->
    <aside class="collection-filters" data-collection-filters>
      <div class="filters-header">
        <h3 class="filters-title text-primary text-xl text-semibold">Filters</h3>
        <button class="filters-close" data-filters-close>×</button>
      </div>

      <!-- Price Filter -->
      <div class="filter-group">
        <h4 class="filter-title text-secondary text-base text-medium">Price</h4>
        <div class="price-filter">
          <input type="range" id="price-min" min="0" max="1000" value="0" class="price-slider">
          <input type="range" id="price-max" min="0" max="1000" value="1000" class="price-slider">
          <div class="price-values">
            <span class="price-min">$0</span>
            <span class="price-max">$1000</span>
          </div>
        </div>
      </div>

      <!-- Tag Filter -->
      {% if collection.all_tags.size > 0 %}
        <div class="filter-group">
          <h4 class="filter-title text-secondary text-base text-medium">Tags</h4>
          <div class="tag-filters">
            {% for tag in collection.all_tags %}
              {% unless tag contains 'filter_' %}
                <label class="tag-filter-label">
                  <input type="checkbox" name="tag" value="{{ tag | handle }}" 
                         {% if current_tags contains tag %}checked{% endif %}>
                  <span class="tag-filter-text">{{ tag }}</span>
                </label>
              {% endunless %}
            {% endfor %}
          </div>
        </div>
      {% endif %}

      <!-- Category Filter -->
      {% if collection.all_types.size > 0 %}
        <div class="filter-group">
          <h4 class="filter-title text-secondary text-base text-medium">Category</h4>
          <div class="category-filters">
            {% for type in collection.all_types %}
              <label class="category-filter-label">
                <input type="checkbox" name="type" value="{{ type | handle }}">
                <span class="category-filter-text">{{ type }}</span>
              </label>
            {% endfor %}
          </div>
        </div>
      {% endif %}

      <!-- Filter Actions -->
      <div class="filter-actions">
        <button class="filter-apply-btn btn-primary">Apply Filters</button>
        <button class="filter-clear-btn btn-secondary">Clear All</button>
      </div>
    </aside>

    <!-- Products Grid -->
    <div class="collection-products">
      {% if collection.products.size > 0 %}
        <div class="products-grid" data-products-grid>
          {% for product in collection.products %}
            {% render 'product-card', product: product %}
          {% endfor %}
        </div>

        <!-- Pagination -->
        {% if paginate.pages > 1 %}
          <div class="collection-pagination">
            {{ paginate | default_pagination }}
          </div>
        {% endif %}
      {% else %}
        <div class="collection-empty">
          <h3 class="empty-title text-primary text-2xl text-semibold">No products found</h3>
          <p class="empty-description text-secondary text-base">
            Try adjusting your filters or search terms.
          </p>
          <a href="/collections/all" class="empty-link btn-primary">Browse All Products</a>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% endpaginate %}

{% schema %}
{
  "name": "Collection Page",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 24,
      "step": 4,
      "default": 12,
      "label": "Products per page"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "Show collection description"
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "default": true,
      "label": "Enable filtering"
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "default": true,
      "label": "Enable sorting"
    }
  ]
}
{% endschema %}